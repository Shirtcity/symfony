<div class="article-list">
{% for purchasable in purchasables %}
    {% if "article" == purchasable.purchasableType %}
        {% include '@StoreTemplate/Modules/_article-item.html.twig' with {
            'article' : purchasable
        } %}
    {% elseif "purchasable_pack" == purchasable.purchasableType %}
        {% include '@StoreTemplate/Modules/_article-pack-item.html.twig' with {
            'pack' : purchasable
        } %}
    {% endif %}
{% else %}
    <div class="article-empty">
        <i class="fa fa-frown-o fa-3x"></i>
        <h2 class="article-title">{{ "template.store_template_bundle.article.list.no_articles_in_category"|trans}}</h2>
    </div>
{% endfor %}
</div>
