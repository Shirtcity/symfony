{% extends 'AdminCoreBundle::Common/formComponent.html.twig' %}


{% set elcodi_context = {
    entity_type: 'product',
} %}


{% form_theme form with ['AdminCoreBundle::Forms/fields.html.twig'] %}


{% block content %}

    {% set formAction = url('admin_product_variants_update', { id: product.id }) %}

    {{ form_start(form, { action: formAction }) }}
        <fieldset>
            <div class="grid">
                {% for size in form.sizes %}
                    {{ size.vars.data.size.name }}
                    {{ form_row(size) }}
                {% endfor %}
            </div>
        </fieldset>
        <div class="grid fixed-bottom animated fade-in-up">
            <div class="col-1-3">
                &nbsp;
            </div>
            <div class="col-2-3">
                <button id="submit-save" type="submit" class="button-primary button-fat pv-s mr-l">{{ 'ui.forms.save'|trans }}</button>
            </div>
        </div>
    {{ form_end(form) }}

{% endblock content %}