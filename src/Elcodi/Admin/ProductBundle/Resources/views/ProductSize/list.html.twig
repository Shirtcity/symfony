{% extends 'AdminCoreBundle::layout.html.twig' %}


{% set elcodi_context = {
    entity_type: 'product_size'
} %}


{% block breadcrumb %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: [
            { name: 'admin.product_size.plural'|trans, active: true },
        ],
    } %}

{% endblock breadcrumb %}


{% block header_actions %}

    <a href="{{ url('admin_product_size_new') }}" type="button" class="button-primary" data-test="new-product" data-fc-modules="window-content">
        <i class="icon-plus"></i>
        <span>{{ 'admin.product_size.new'|trans }}</span>
    </a>

{% endblock header_actions %}


{% block content %}
    <div id="product-size-list">
        {{
            render(url('admin_product_size_list_component', {
                page: page,
                limit: limit,
                orderByField: orderByField,
                orderByDirection: orderByDirection
            }))
        }}
    </div>
{% endblock content %}
