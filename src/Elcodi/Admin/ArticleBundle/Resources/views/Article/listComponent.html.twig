{% extends 'AdminCoreBundle::Common/listComponent.html.twig' %}


{% set elcodi_context = {
    entity_type: 'article'
} %}


{% block title 'admin.article.list'|trans %}


{% block no_items
    lists.no_items(
        'admin.article.single'|trans,
        'admin.article.plural'|trans,
        url('admin_article_new')
    )
%}


{% block table_head %}

    {% include '@AdminCore/Tables/head.html.twig' with {
        rows: [
            { name: 'admin.article.field.image.title'|trans, width: 10 },
            { name: 'admin.article.field.name_details.title'|trans },
            { name: 'admin.article.field.main_category.title'|trans, width: 15 }
        ],
        class: 'article',
    } %}

{% endblock table_head %}


{% block table_body_row %}

    <td data-test="article-{{ entity.id }}">
        {% if entity|print_side_preview_image('front')|length > 0 %}
            <a href="{{ url('admin_article_edit', { id: entity.id }) }}" class="thumbnail">
                <img src="{{ entity|print_side_preview_image('front')|combine }}" />
            </a>
        {% endif %}
    </td>
    <td>
        <a href="{{ url('admin_article_edit', { id: entity.id }) }}">
            <strong>{{ entity.name }}</strong>
        </a>

        {% set path = url('store_article_view', { id: entity.id, slug: entity.slug }) %}
        {% set relativePath = path('store_article_view', { id: entity.id, slug: entity.slug }) %}
        <p class="fz-s">
            <a target="_blank" href="{{ path }}">{{ relativePath }}</a>
        </p>

        {% if entity.enabled %}
            <span class="label-ok fz-xs">{{ 'admin.article.field.enabled.options.active'|trans }}</span>
        {% else %}
            <span class="label fz-xs">{{ 'admin.article.field.enabled.options.inactive'|trans }}</span>
        {% endif %}

        {% if entity.showInHome %}
            <span class="label-info fz-xs">
                {{'admin.article.tag.in_home'|trans}}
            </span>
        {% endif %}

    </td>
    <td>
        {% if entity.principalCategory %}
            <a href="{{ url('admin_category_edit', { id: entity.principalCategory.id }) }}">
                {{ entity.principalCategory.name }}
            </a>
        {% endif %}
    </td>
      
    {% include '@AdminCore/Tables/actions.html.twig' with {
        entity: entity,
        class: 'article',
    } %}

{% endblock table_body_row %}


{% block table_paginator_links %}

    {% set url = 'admin_article_list' %}
    {{ parent() }}

{% endblock table_paginator_links %}
