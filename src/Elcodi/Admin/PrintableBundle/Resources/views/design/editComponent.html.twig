{% extends 'AdminCoreBundle::Common/formComponent.html.twig' %}


{% set elcodi_context = {
    entity_type: 'design',
} %}


{% form_theme form 'AdminCoreBundle::Forms/fields.html.twig' %}


{% block content %}

    {% set formAction =
        design.id
            ? url('admin_design_update', { id: design.id })
            : url('admin_design_save')
     %}


    {{ form_start(form, { action: formAction }) }}
        <fieldset>
            <div class="grid">
                <div class="col-1-3">
                    <div class="box-none">
                        <h3 class="fw-n">Inhalt</h3>
                    </div>
                </div>
                <div class="col-2-3">
                    {{
                    form_row(form.name, {
                        label: 'Name',
                        attr: {
                            placeholder: 'Name',
                        }
                    })
                    }}
                </div>
            </div>
            <div class="grid">
                <div class="col-1-3">
                    <div class="box-none">
                        <h3 class="fw-n">Kunde</h3>
                    </div>
                </div>
                <div class="col-2-3">
                    {{
                    form_row(form.customer, {
                        label: 'Kunde',
                        attr: {
                            placeholder: 'Kunde',
                        }
                    })
                    }}
                </div>
            </div>
            <div class="grid">
                <div class="col-1-3">
                    <div class="box-none">
                        <h3 class="fw-n">Farben</h3>
                    </div>
                </div>
                <div class="col-2-3">
                    {{
                    form_row(form.foilcolor, {
                        label: 'Farben',
                        attr: {
                            placeholder: 'Farben',
                        }
                    })
                    }}
                </div>
            </div>
            <div class="grid">
                <div class="clear"></div>

                <div class="col-1-3">
                    <div class="box-none">
                        <h3 class="fw-n">Vectordatei (.ai, .png)</h3>
                    </div>
                </div>
                <div class="col-2-3">{{ design.getVectorFileName() }}<br>{{ form_widget(form.vectorFile) }}</div>

            </div>
            <div class="grid">
                <div class="clear"></div>

                <div class="col-1-3">
                    <div class="box-none">
                        <h3 class="fw-n">Vorschau (.png)</h3>
                    </div>
                </div>
                <div class="col-2-3">{{ design.getPreviewFileName() }}<br>{{ form_widget(form.previewFile) }}</div>
            </div>
            <div class="grid">
                <div class="clear"></div>

                <div class="col-1-3">
                    <div class="box-none">
                        <h3 class="fw-n">Aktiv</h3>
                    </div>
                </div>
                <div class="col-2-3">
                    {{
                    form_row(form.enabled, {
                        label: 'Aktiv'
                    })
                    }}
                </div>
            </div>
            <div class="grid">
                <div class="clear"></div>

                <div class="col-1-3">
                    <div class="box-none">
                        <h3 class="fw-n">LÃ¤nder</h3>
                    </div>
                </div>
                <div class="col-2-3">
                    {{
                    form_widget(form.country)
                    }}
                </div>
            </div>
        </fieldset>
        <div class="grid fixed-bottom animated fade-in-up">
            <div class="col-1-3">
                &nbsp;
            </div>
            <div class="col-2-3">
                <button id="submit-save" type="submit" class="button-primary button-fat pv-s mr-l">{{ 'ui.forms.save'|trans }}</button>
                <a href="{{ path('admin_design_list') }}">{{ 'ui.forms.cancel'|trans }}</a>
            </div>
        </div>
        <div class="grid">
            <div class="col-1-3">
                <div class="box-none">
                    <h3 class="fw-n">Tags</h3>
                </div>
            </div>
            <div class="col-2-3">
                {{
                form_row(form.designCategory, {
                    label: 'Tags',
                    attr: {
                        placeholder: 'tags',
                    }
                })
                }}
            </div>
        </div>
    <br/><br/><br/>
    {{ form_end(form) }}

    {% stylesheets'bundles/elcodigeo/css/flags.min.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

{% endblock content %}
