{% extends 'AdminCoreBundle::Common/formComponent.html.twig' %}


{% set elcodi_context = {
    entity_type: 'text',
} %}


{% form_theme form 'AdminCoreBundle::Forms/fields.html.twig' %}


{% block content %}

    {% set formAction =
        text.id
            ? url('admin_text_update', { id: text.id })
            : url('admin_text_save')
     %}


    {{ form_start(form, { action: formAction }) }}
        <fieldset>
            <div class="grid">
                <div class="col-1-3">
                    <div class="box-none">
                        <h3 class="fw-n">Inhalt</h3>
                    </div>
                </div>
                <div class="col-2-3">
                    {{
                    form_row(form.content, {
                        label: 'Content',
                        attr: {
                            placeholder: 'Content',
                        }
                    })
                    }}
                </div>
            </div>
            <div class="grid">
                <div class="clear"></div>

                <div class="col-1-3">
                    <div class="box-none">
                        <h3 class="fw-n">Aktiv</h3>
                    </div>
                </div>
                <div class="col-2-3">
                    {{
                    form_row(form.enabled, {
                        label: 'Aktiv'
                    })
                    }}
                </div>
            </div>
        </fieldset>
        <div class="grid fixed-bottom animated fade-in-up">
            <div class="col-1-3">
                &nbsp;
            </div>
            <div class="col-2-3">
                <button id="submit-save" type="submit" class="button-primary button-fat pv-s mr-l">{{ 'ui.forms.save'|trans }}</button>
                <a href="{{ path('admin_text_list') }}">{{ 'ui.forms.cancel'|trans }}</a>
            </div>
        </div>
    {{ form_end(form) }}

{% endblock content %}
