{% form_theme form _self %}

{% block entity_color_widget %}
    {% spaceless %}
        {% if expanded %}
            <ul {{ block('widget_container_attributes') }} class="list-horizontal">
                {% for child in form %}
                    <li>
                        <label class="checkbox" for="{{ child.vars.id }}">
                            <div
                                style="
                                    width: 1.4rem;
                                    height: 1.4rem;
                                    background-color: {{ child.vars.label }};
                                    display: inline-block;
                                    border: 1px solid black;
                                "
                            >
                            </div>
                            {{ form_row(child, { 'label': false }) }}
                        </label>                        
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            {{ block('choice_widget_collapsed') }}
        {% endif %}
    {% endspaceless %}
{% endblock %}